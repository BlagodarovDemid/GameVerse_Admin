@{
    ViewData["Title"] = "Авторизация";
    Layout = "";
}
<style>
    .div-beb {
        background-size: 100%;
        min-height: 300px;
        min-width: 400px;
        max-width: 600px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%,-50%);
        opacity: 70%;
    }
    .img-game {
        opacity: 80%;
        left: 50%;
        border:dashed;
    }
    .margin-on {
        margin: 5px;
    }
    .a-click {
        text-decoration-line: none;
        color: black;
    }
    .div-baobab {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        width: 70%;
        margin: 10px auto;
        position: relative;
        text-align: center;
    }
    body {
        background-image: url('/images/MainBackground.png');
        min-width: 100%;
        min-height: 100%;
        width: 100%;
        height: 500px;
        position: absolute;
        overflow: hidden;
    }
</style>
<body>
    @using (Html.BeginForm("Authorization", "Home", FormMethod.Post))
    {
        <div class="div-beb">
            <div class="div-baobab">
                <div class="container">
                    <div class="block">
                        <img src="~/images/game.png" class="img-gameV" style="opacity: 95%; position: absolute;
                         top: 10%;
                         left: 50%;
                         margin-right: -50%;
                         transform: translate(-50%,-50%);" />
                    </div>
                    <div class="block" style="margin-top:150px">
                        <input name="login" id="TESTSQL" class="margin-on" type="email" value="@ViewBag.Login"/>
                    </div>
                    <div class="block">
                        <input name="password" class="margin-on" type="password" value="@ViewBag.Password"/>
                    </div>
                    <div class="block">
                        <button style="width: 120px; height: 30px; left: 50%; transform: translate(-50%, 0%); position: absolute;" class="margin-on" onclick="location.href='@Url.Action("Authorization", "Home")'">Авторизоваться</button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</body>
