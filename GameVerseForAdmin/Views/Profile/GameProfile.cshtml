@using GameVerseForAdmin.Models
@model IEnumerable<Games_Info>

@{
    ViewData["Title"] = "Страница игры";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

<style>
    .div-center1 {
        width: 70%;
        min-width: 800px;
        height: 400px;
        position: relative;
        left: 50%;
        transform: translate(-50%, 0%);
        margin-top: 20px;
        background: rgba(161, 181, 246, 0.20)
    }

    .image-container {
        display: flex;
        overflow-x: auto;
    }

    .image-container img {
        margin-right: 10px;
    }
</style>

<body style="background-color:#3A3E3F; width: 100%; min-width: 1200px;">
    @foreach (var games_Info in Model)
    {
        @foreach (var game in games_Info.Games)
        {
            <div>
                <div class="div-center1" style="height: 100%; font-size:23px; color: white; text-align:start; padding-left: 2px;">
                    Название:
                    <textarea style="resize:none; width: 300px; height: 100%; left: 120px; top: 0px; position: absolute; color: white; font-size: 18px; font-family: Inter; background-color: rgba(161, 181, 246, 0.20); font-weight: 700; word-wrap: break-word">@game.Title</textarea>
                </div>
                <div class="div-center1">
                    <div style="display: flex;width: 100%; height: 400px; position: absolute; background: #404040; border: 1px #6F869B solid">
                        @foreach (var image in games_Info.Images)
                        {
                            if (image.GameId == game.Id)
                            {
                                <div style="float:right; height: 100%; width:300px;">
                                    <div style="width: 130px; height: 30px; right:5px; top: 340px; position: absolute; background: #5D94C5; justify-content: center; align-items: center; display: inline-flex">
                                        <textarea name="Price" style="resize:none; position: absolute; background-color: #5D94C5; width: 130px; height: 30px; padding: 0px, 20px, 0px, 0px; text-align: center; color: white; font-size: 15px; font-family: Inter; font-weight: 350; word-wrap: break-word">@game.Price руб.</textarea>
                                    </div>
                                    <div style="width: 300px; height: 20px;right:0px; top: 292px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Разработчик:</div>
                                    <textarea name="Developers" style="resize:none; width: 200px; height: 20px;right:20px; top: 290px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@game.Developers</textarea>
                                    <div style="width: 300px; height: 20px; right:0px; top: 312px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Дата выхода:</div>
                                    <input name="PublicDate" type="datetime" value="@game.PublicDate" style="resize:none; width: 200px; height: 17px; right:20px; top: 310px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word" />
                                    <textarea name="TitleDescription" style="resize:none; width: 300px; height: 130px; right:0px; top: 160px; position: absolute; color: white; font-size: 12px; font-family: Inter; background-color: rgba(161, 181, 246, 0.20); font-weight: 700; word-wrap: break-word">@game.TitleDescription</textarea>

                                    <img style="width: 300px; height: 160px; right:0px;  top: 0px; position: absolute" src="@image.Image1" />

                                    <img src="~/Resources/Cross.png" style="height: 25px; width: 25px; right:25px; top: 375px; position: absolute; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25) inset; flex-direction: column; justify-content: center; align-items: flex-start; gap: 8px; display: inline-flex" />
                                    <img src="~/Resources/Pencil.png" style="height: 25px; width: 25px; right:0px; top: 375px; position: absolute; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25) inset; flex-direction: column; justify-content: center; align-items: flex-start; gap: 8px; display: inline-flex" />
                                </div>
                                <div style="width: 450px; height: 90px; left: 1px; top: 250px; position: absolute">
                                    <img style="width: 150px; height: 80px; left: 0px; top: 0px; position: absolute; border: 1px black solid" src="@image.Image2" />
                                    <img style="width: 150px; height: 80px; left: 150px; top: 0px; position: absolute; border: 1px black solid" src="@image.Image3" />
                                    <img style="width: 150px; height: 80px; left: 300px; top: 0px; position: absolute; border: 1px black solid" src="@image.Image4" />
                                </div>
                                <img style="width: 450px; height: 240px; left: 1px; top: 1px; position: absolute" src="@image.Image2" />
                            }
                        }
                    </div>
                </div>

                <div class="div-center1" style="height: 150px">
                    <div style="background: #404040; height:100%; border: 1px #6F869B solid">
                        <div style="width: 270px; left: 120px; height: 59px; color: white; font-size: 20px; font-family: Inter; font-weight: 700; word-wrap: break-word; padding-left: 2px;">Достижения</div>
                        <div style="padding-left: 5px;" class="image-container">
                            @foreach (var achievements in games_Info.Achievements)
                            {
                                if (achievements.GameId == game.Id)
                                {
                                    <img style="width: 80px; height: 80px;" src="@achievements.Image" />
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="div-center1" style="height: 250px">
                    <div style="display:flex; background: #404040; height:100%; border: 1px #6F869B solid">
                        @foreach (var sysReq in games_Info.SysReqs)
                        {
                            if (sysReq.GameId == game.Id)
                            {
                                <div style="float:right; height: 100%; width:300px;">
                                    <div style="width: 269px; height: 75px; right:50px; top: 60px; position: absolute; color: white; font-size: 15px; font-family: Inter; font-weight: 700; word-wrap: break-word">Рекомендованные</div>

                                    <textarea name="GameGPUreq" style="resize:none; width: 240px; height: 20px; right: 20px; top: 150px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.GPUreq</textarea>
                                    <textarea name="GameRAMreq" style="resize:none; width: 195px; height: 20px; right: 20px; top: 130px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.RAMreq</textarea>
                                    <textarea name="GameCPUreq" style="resize:none; width: 245px; height: 20px; right: 20px; top: 110px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.CPUreq</textarea>

                                    <div style="resize:none; width: 300px; height: 25px; right: 22px; top: 152px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Видеокарта: </div>
                                    <div style="resize:none; width: 300px; height: 25px; right: 22px; top: 131px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Оперативная память: </div>
                                    <div style="resize:none; width: 300px; height: 25px; right: 22px; top: 112px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Процессор: </div>

                                </div>

                                <textarea name="GameSpace" style="resize:none; width: 220px; height: 20px; left: 100px; top: 170px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.Space</textarea>
                                <textarea name="GameGPUmin" style="resize:none; width: 240px; height: 20px; left: 80px; top: 150px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.GPUmin</textarea>
                                <textarea name="GameRAMmin" style="resize:none; width: 195px; height: 20px; left: 125px; top: 130px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.RAMmin</textarea>
                                <textarea name="GameCPUmin" style="resize:none; width: 245px; height: 20px; left: 75px; top: 110px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.CPUmin</textarea>
                                <textarea name="GameOS" style="resize:none; width: 280px; height: 20px; left: 40px; top: 90px; position: absolute; color: white; background-color: rgba(161, 181, 246, 0.20); font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">@sysReq.OS</textarea>

                                <div style="resize:none; width: 300px; height: 25px; left: 22px; top: 173px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Место на диске: </div>
                                <div style="resize:none; width: 300px; height: 25px; left: 22px; top: 152px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Видеокарта: </div>
                                <div style="resize:none; width: 300px; height: 25px; left: 22px; top: 131px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Оперативная память: </div>
                                <div style="resize:none; width: 300px; height: 25px; left: 22px; top: 112px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">Процессор: </div>
                                <div style="resize:none; width: 300px; height: 25px; left: 22px; top: 92.5px; position: absolute; color: white; font-size: 10px; font-family: Inter; font-weight: 700; word-wrap: break-word">ОС: </div>

                                <div style="width: 400px; height: 67px; left: 20px; top: 20px; position: absolute; color: white; font-size: 20px; font-family: Inter; font-weight: 700; word-wrap: break-word">Системные требования</div>
                                <div style="width: 269px; height: 75px; left: 20px; top: 60px; position: absolute; color: white; font-size: 15px; font-family: Inter; font-weight: 700; word-wrap: break-word">Минимальные</div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
</body>